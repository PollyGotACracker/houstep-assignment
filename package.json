{
  "name": "houstep-assignment",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node --loader ts-node/esm ./src/db/index.ts",
    "dev": "next dev",
    "server": "json-server --watch ./src/db/db.json --port 3001",
    "prod": "next start",
    "build": "cross-env NODE_PATH=src && tsc && next build",
    "lint": "next lint",
    "heroku-postbuild": "cross-env NODE_PATH=src npm run build"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "json-server": "^0.17.3",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "recoil": "^0.7.7"
  },
  "devDependencies": {
    "@types/json-server": "^0.14.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
